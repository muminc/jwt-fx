<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.choudhury.jwt-fx</groupId>
        <artifactId>parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>dist</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>dist</name>

    <dependencies>
        <dependency>
            <groupId>com.choudhury.jwt-fx</groupId>
            <artifactId>app</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <version>1.7.25</version>
                <executions>
                    <execution>
                        <id>l4j-clui</id>
                        <phase>package</phase>
                        <goals>
                            <goal>launch4j</goal>
                        </goals>
                        <configuration>
                            <headerType>gui</headerType>
                            <outfile>target/jwt-fx.exe</outfile>
                            <errTitle>Mumin</errTitle>
                            <icon>src/bin/win/ticket.ico</icon>
                            <classPath>
                                <mainClass>com.choudhury.jwt.fx.MainApp</mainClass>
                                <addDependencies>false</addDependencies>
                                <preCp>app.jar</preCp>
                            </classPath>
                            <jre>
                                <path>.\jre-win64\</path>
                                <opts>
                                    <opt>-XX:SharedArchiveFile=app-cds.jsa</opt>
                                    <!-- <opt>-Djava.endorsed.dirs=./endorsed</opt> --><!-- not yet supported with modules -->
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.geom=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.scene=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.scene.text=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.tk=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.application=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.scene.layout=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.glass.ui=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.util=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.scene.input=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.stage=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.scene.traversal=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.graphics/com.sun.javafx.css=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx.reflect=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx.beans=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx.logging=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx.collections=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx.binding=ALL-UNNAMED]]></opt>
                                    <opt><![CDATA[--add-exports=javafx.base/com.sun.javafx.event=ALL-UNNAMED]]></opt>
                                    <opt>-Dprism.dirtyopts=false</opt>
                                </opts>
                            </jre>
                            <versionInfo>
                                <fileVersion>2.0.0.0</fileVersion>
                                <txtFileVersion>2.0.0.0</txtFileVersion>
                                <fileDescription>jwt-fx</fileDescription>
                                <copyright>copyright</copyright>
                                <productVersion>2.0.0.0</productVersion>
                                <txtProductVersion>2.0.0.0</txtProductVersion>
                                <productName>jwt-fx</productName>
                                <internalName>jwt-fx</internalName>
                                <originalFilename>jwt-fx.exe</originalFilename>
                            </versionInfo>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


            <plugin>
                <groupId>com.igormaznitsa</groupId>
                <artifactId>mvn-jlink-wrapper</artifactId>
                <version>1.0.3</version>
                <configuration>
                    <!-- <modulePath>${env.JAVAFX_MODS}</modulePath> -->
                    <addModules>
                        <addModule>java.base</addModule>
                        <addModule>java.compiler</addModule>
                        <addModule>java.datatransfer</addModule>
                        <addModule>java.desktop</addModule>
                        <addModule>java.logging</addModule>
                        <addModule>java.management</addModule>
                        <addModule>java.naming</addModule>
                        <addModule>java.scripting</addModule>
                        <addModule>java.sql</addModule>
                        <addModule>java.xml</addModule>
                        <addModule>jdk.jsobject</addModule>
                        <addModule>jdk.crypto.ec</addModule>
                        <addModule>jdk.unsupported</addModule>
                        <addModule>jdk.unsupported.desktop</addModule>
                        <addModule>jdk.xml.dom</addModule>
                        <addModule>javafx.controls</addModule>
                        <addModule>javafx.fxml</addModule>
                        <addModule>jdk.scripting.nashorn</addModule>
                        <addModule>java.security.jgss</addModule>
                    </addModules>
                    <options>
                        <option>--compress=2</option>
                        <option>--no-header-files</option>
                        <option>--no-man-pages</option>
                    </options>
                </configuration>
                <executions>
                    <execution>
                        <id>call-jlink-win</id>
                        <goals>
                            <goal>jlink</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <output>${project.build.directory}${file.separator}jre-win64</output>
                            <provider>BELLSOFT</provider>
                            <providerConfig>
                                <version>11.0.4</version>
                                <arch>amd64</arch>
                                <type>jdk</type>
                                <os>windows</os>
                            </providerConfig>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>distro-assembly-win</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.artifactId}-win64</finalName>
                            <descriptors>
                                <descriptor>src/assembly/bin-win.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>distro-assembly-linux</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.artifactId}-linux64</finalName>
                            <descriptors>
                                <descriptor>src/assembly/bin-linux.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>distro-assembly-macos</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.artifactId}-macos64</finalName>
                            <descriptors>
                                <descriptor>src/assembly/bin-macos.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>

</project>
