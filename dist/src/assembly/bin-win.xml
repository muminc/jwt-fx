<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>jwt-javafx-${project.version}</baseDirectory>

	<fileSets>
		<fileSet>
			<directory>src/bin/win</directory>
			<outputDirectory>./</outputDirectory>
			<lineEnding>windows</lineEnding>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>*.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/jre-win64</directory>
			<outputDirectory>./jre-win64</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>

			<useAllReactorProjects>true</useAllReactorProjects>

			<includes>
				<include>com.choudhury.jwt-javafx:app</include>
			</includes>
			<binaries>
				<outputDirectory>./</outputDirectory>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>

			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
