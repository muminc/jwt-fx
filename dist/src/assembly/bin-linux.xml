<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>bin</id>
	<formats>
		<format>tgz</format>
	</formats>
	<baseDirectory>jwt-javafx-${project.version}</baseDirectory>

	<fileSets>
		<fileSet>
			<directory>src/bin/linux</directory>
			<outputDirectory>./</outputDirectory>
			<lineEnding>unix</lineEnding>
			<excludes>
				<exclude>*.sh</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/bin/linux</directory>
			<outputDirectory>./</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>744</fileMode>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/jre-linux64</directory>
			<outputDirectory>./jre-linux64</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>

			<useAllReactorProjects>true</useAllReactorProjects>

			<includes>
				<include>com.choudhury.jwt-javafx:app</include>
			</includes>
			<binaries>
				<outputDirectory>./</outputDirectory>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>

			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.choudhury.jwt-javafx:app</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<outputDirectory>/plugins</outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
